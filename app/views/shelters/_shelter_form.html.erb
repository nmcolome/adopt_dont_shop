<section class="form">
  <%= form_with model: @shelter, local: true do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <p class="red"><%= @shelter.errors.messages[:name][0] %></p>
    <%= f.label :address %>
    <%= f.text_field :address%>
    <p class="red"><%= @shelter.errors.messages[:address][0] %></p>
    <%= f.label :city %>
    <%= f.text_field :city%>
    <p class="red"><%= @shelter.errors.messages[:city][0] %></p>
    <%= f.label :state %>
    <%= f.select(:state, Shelter.state_abbr) %>
    <%= f.label :zip %>
    <%= f.text_field :zip%>
    <p class="red"><%= @shelter.errors.messages[:zip][0] %></p>
    <%= f.submit class: "submit" %>
  <% end %>
</section>
