<section>
  <h1><%= @pet.name %></h1>
  <div class="container">
    <div class="img-container">
      <%= image_tag @pet.image %>
    </div>
    <div class="info">
      <h2><%= @pet.description %></h2>
      <p><%= @pet.approximate_age %> years old, approximately </p>
      <p><%= @pet.sex %></p>
      <p><span class="bold">Adoption status:</span> <%= @pet.status %></p>
    </div>
  </div>
  <%= link_to "Update Pet", edit_pet_path(@pet) %>
</section>
