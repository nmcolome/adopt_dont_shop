<section>
  <%= form_with model: @pet, local: true do |f| %>
    <%= f.label :image_url %>
    <%= f.text_field :image %>
    <p class="red"><%= @pet.errors.messages[:image][0] %></p>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <p class="red"><%= @pet.errors.messages[:name][0] %></p>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <p class="red"><%= @pet.errors.messages[:description][0] %></p>
    <%= f.label :approximate_age %>
    <%= f.text_field :approximate_age %>
    <p class="red"><%= @pet.errors.messages[:approximate_age][0] %></p>
    <%= f.label :sex %>
    <%= f.text_field :sex %>
    <p class="red"><%= @pet.errors.messages[:sex][0] %></p>
    <%= f.submit %>
  <% end %>
</section>
